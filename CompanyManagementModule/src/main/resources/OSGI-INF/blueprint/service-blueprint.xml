<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf"
           xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             ">
    <camelcxf:cxfEndpoint id="companyRequest"
                          address="http://localhost:10358/company_service"
                          endpointName="s:CompanyServiceEndpoint"
                          serviceName="s:CompanyServiceEndpointService"
                          wsdlURL="META-INF/wsdl/company_service.wsdl"
                          xmlns:s="http://companyservice.estafet.com/">
        <camelcxf:properties>
            <entry key="dataFormat" value="PAYLOAD"/>
        </camelcxf:properties>
    </camelcxf:cxfEndpoint>

    <bean id="companyServiceRoute" class="com.estafet.invoicesystem.company.route.ManagementRouteBuilder"/>

    <camelContext id="camelCompanyService" xmlns="http://camel.apache.org/schema/blueprint">
        <routeBuilder ref="companyServiceRoute"/>
    </camelContext>

    <reference id="companyDAOService" interface="com.estafet.invoicesystem.jpa.dao.api.CompanyDAO"/>

    <bean id="companyProcessor" class="com.estafet.invoicesystem.company.processor.CompanyProcessor">
        <property name="companyDao" ref="companyDAOService"/>
    </bean>
</blueprint>