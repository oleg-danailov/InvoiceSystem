<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
           xmlns:jaxws="http://cxf.apache.org/blueprint/jaxws"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xmlns:camel="http://camel.apache.org/schema/blueprint"
           xmlns:camelcxf="http://camel.apache.org/schema/blueprint/cxf"
           xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             http://cxf.apache.org/blueprint/jaxws http://cxf.apache.org/schemas/blueprint/jaxws.xsd
             http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd
             ">
    <!-- wsdlURL="META-INF/wsdl/tax_service.wsdl" -->
    <camelcxf:cxfEndpoint id="invoiceRequest"
                          address="http://localhost:10354/invoice_service"
                          endpointName="s:InvoiceServiceEndpoint"
                          serviceName="s:InvoiceServiceEndpointService"
                          serviceClass="com.estafet.invoiceservice.api.InvoiceService"
                          xmlns:s="http://invoiceservice.estafet.com/">
        <camelcxf:properties>
            <entry key="dataFormat" value="PAYLOAD"/>
        </camelcxf:properties>
    </camelcxf:cxfEndpoint>


    <bean id="invoiceServiceRoutes" class="com.estafet.invoiceservice.route.InvoiceServiceRoute"/>

    <camelContext id="camelInvoiceService" xmlns="http://camel.apache.org/schema/blueprint">
        <routeBuilder ref="invoiceServiceRoutes"/>
        <routeBuilder ref="jettyRestToJPARoute" />
    </camelContext>
    <bean id="jettyRestToJPARoute" class="com.estafet.invoicesystem.routebuilders.JettyRestToJPARoute"/>

    <reference id="invoiceDAOService" interface="com.estafet.invoicesystem.jpa.dao.api.InvoiceDAO" />

    <bean id="invoiceJpaProcessor" class="com.estafet.invoicesystem.processor.InvoiceJpaProcessor">
        <property name="invoiceDao" ref="invoiceDAOService"></property>
    </bean>


</blueprint>